<script>
        // Get the button, and when the user clicks on it, execute myFunction
        document.getElementById("menu-btn").onclick = function () { myFunction() };
        document.getElementById("menu-close-btn").onclick = function () { myFunctionClose() };

        /* myFunction toggles between adding and removing the show class, which is used to hide and show the dropdown content */
        function myFunction() {
                document.getElementById("nav-full").classList.toggle("show");
        }
        function myFunctionClose() {
                document.getElementById("nav-full").classList.toggle("show");
        }

        const menus = document.querySelectorAll('.hassubmenu-icon');
        const submenus = document.querySelectorAll('.hassubsubmenu-icon');

        const back1 = document.getElementById('back1');
        const back2 = document.getElementById('back2');

        back1.addEventListener('click', event => {
                menus.forEach(el => {
                        const parent = el.parentNode;
                        back1.classList.add('hidden');
                        back2.classList.add('hidden');
                        parent.childNodes[4].classList.add('translate-x-full');
                        parent.childNodes[4].classList.remove('translate-x-0');
                });

                submenus.forEach(el => {
                        const parent = el.parentNode;
                        const parentNode = parent.parentNode;
                        parentNode.childNodes[3].classList.add('translate-x-full');
                        parentNode.childNodes[3].classList.remove('translate-x-0');
                });
        });

        back2.addEventListener('click', event => {
                submenus.forEach(el => {
                        const parent = el.parentNode;
                        back1.classList.remove('hidden');
                        back2.classList.add('hidden');
                        const parentNode = parent.parentNode;
                        parentNode.childNodes[3].classList.add('translate-x-full');
                        parentNode.childNodes[3].classList.remove('translate-x-0');
                });
        });
        menus.forEach(el => el.addEventListener('click', event => {
                const parent = event.target.parentNode;
                back1.classList.remove('hidden');
                back2.classList.add('hidden');
                parent.childNodes[4].classList.remove('translate-x-full');
                parent.childNodes[4].classList.add('translate-x-0');
                console.log(parent.childNodes[4]);
        }));

        submenus.forEach(el => el.addEventListener('click', event => {
                const parent = event.target.parentNode;
                const parentNode = parent.parentNode;
                back1.classList.add('hidden');
                back2.classList.remove('hidden');
                console.log(parentNode.childNodes);
                parentNode.childNodes[3].classList.remove('translate-x-full');
                parentNode.childNodes[3].classList.add('translate-x-0');
        }));

        const menuhover = document.querySelectorAll('.desktop-nav > ul > li.parent');
        menuhover.forEach(el => el.addEventListener('mouseover', event => {
                document.getElementById("menu-overlay").classList.remove('hidden');
        }));
        menuhover.forEach(el => el.addEventListener('mouseout', event => {
                document.getElementById("menu-overlay").classList.add('hidden');
        }));

</script>