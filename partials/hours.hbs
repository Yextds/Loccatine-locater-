{{!-- <summary class="hours-list text-base">   --}}
{{!-- <summary class="hours-list text-base">   --}}
  {{#with (formatHours this "Monday" "TimeFormatShort" "DateFormatShort") }}
      {{#each this.regularHours}}
      <div class=" flex items-center mb-4 pl-9 relative {{this.displayDay}} " data-day={{this.displayDay}} 
		  {{#each this.openIntervals}}
		  data-start={{this.start}}   data-end={{this.end}}  
		  {{/each}}>
        <div class="w-24 xl:w-20 2xl:w-24">
          <span class="day">{{this.displayDay}}</span>
        </div>
        <div class="w-[calc(100%_-_5rem)]  text-sm xl:text-xs 2xl:text-sm today">
          {{#if this.isClosed}}<span class="inline-block px-4 text-sm xl:text-xs 2xl:text-sm pt-1 leading-8 rounded opacity-[0.26]">Closed</span>{{/if}}
          {{#if this.is247}}<span class=" inline-block px-4 text-sm xl:text-xs 2xl:text-sm pt-1 leading-8 rounded">Open 24/7</span>{{/if}}
          {{#each this.openIntervals}} 
            <span class=" inline-block px-1 text-center pt-1 leading-8 rounded xl:text-xs 2xl:text-sm  mr-2 time_start">{{this.start}}</span> - <span class="ml-2 inline-block px-1  text-center pt-1 leading-8 rounded text-sm xl:text-xs 2xl:text-sm time_end">{{this.end}}</span>
          {{/each}}
          
        </div>
      </div>
      {{/each}}
  {{/with}}
{{!-- </summary> --}}

